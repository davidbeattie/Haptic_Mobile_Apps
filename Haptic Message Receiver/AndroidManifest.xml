<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.orange.receive"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".HapticMessageReceiver"
                  android:label="@string/app_name" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    <activity android:name="com.orange.receive.Inbox" android:screenOrientation="portrait"></activity>
<activity android:name="com.orange.receive.InboxListItems" android:screenOrientation="portrait"></activity>
<activity android:name="com.orange.receive.SentItems" android:screenOrientation="portrait"></activity>
<activity android:name="com.orange.receive.NewMessage" android:screenOrientation="portrait"></activity>
<activity android:name="com.orange.receive.Compose" android:screenOrientation="portrait"></activity>
</application>
    <uses-sdk android:minSdkVersion="3" />

</manifest> 